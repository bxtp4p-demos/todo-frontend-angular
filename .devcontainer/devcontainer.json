
{
	"name": "Angular App Frontend and Spring Boot Backend",
	"image": "mcr.microsoft.com/devcontainers/universal:2-linux",
	
	"forwardPorts": [4200, 3000],
	"portsAttributes": {
		"4200": {
			"label": "Frontend"
		},
		"8080": {
			"label": "Backend - Spring Boot"
		}
	},
	
	"updateContentCommand": "cd /workspaces && git clone https://github.com/bxtp4p-demos/codespaces-spring-boot-mysql-template.git 2> /dev/null || false && cd codespaces-spring-boot-mysql-template && git pull",
	"postStartCommand": "cd /workspaces/todo-frontend-angular && npm install",
	
	"customizations": {
		"codespaces": {
			"repositories": {
				"bxtp4p-demos/codespaces-spring-boot-mysql-template": {
					"clonePath": "/workspaces/codespaces-spring-boot-mysql-template",
					"permissions": {
						"contents": "write",
						"metadata": "read"
					}
				}
			}
		},
		"vscode": {
			"extensions": [
				"humao.rest-client",
				"Angular.ng-template"
			]
		}
	}
}